= form_with(model: job, local: true) do |form|
  - if job.errors.any?
    #error_explanation
      %h2
        = pluralize(job.errors.count, "error")
        prohibited this job from being saved:
      %ul
        - job.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title, id: :job_title
  .field
    = form.label :description
    = form.text_field :description, id: :job_description
  .field
    = form.label :salary
    = form.text_field :salary, id: :job_salary
  .field
    = form.hidden_field :manager_id, id: :job_manager_id
  .actions
    = form.submit
